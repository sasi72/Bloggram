<%- include("partials/header.ejs") %>
<div class="container">
<%if(locals.blog){ %>
  <% blog.forEach(blogArray =>{ %>
    <div class="card mb-3 shadow rounded-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="images/blogHome.png" class="img-fluid rounded-start" alt="Blog img">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title fw-bold"><%= blogArray.title %></h5>
          <p class="card-text"><%= blogArray.blog %></p>
          <p class="card-text"><small class="text-body-secondary">Posted by <%= blogArray.blogger %></small></p>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
<%}else{%>
  <div class="card mb-3 shadow rounded-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="images/blogHome.png" class="img-fluid rounded-start" alt="Blog img">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title fw-bold">TITLE</h5>
          <p class="card-text">Write your own blog</p>
          <p class="card-text"><small class="text-body-secondary">Posted by you</small></p>
        </div>
      </div>
    </div>
  </div>
<%}%>
</div>
<%- include("partials/footer.ejs") %>