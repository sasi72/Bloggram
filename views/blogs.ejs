<%- include("partials/header.ejs") %>
<div class="container mt-5">
  <% if (locals.blog && blog.length > 0) { %>
    <% blog.forEach(blogArray => { %>
      <div class="card mb-3 shadow rounded-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="images/blogHome.png" class="img-fluid rounded-start" alt="Blog cover">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= blogArray.title %></h5>
              <p class="card-text"><%= blogArray.blog %></p>
              <p class="card-text">
                <small class="text-body-secondary">Posted by <%= blogArray.blogger %></small>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center py-5">
      <h1 class="card-title fw-bold"><span style="background: linear-gradient(135deg, #579ae2e9, #1d40ddc8); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">The stage is yours. Write your first masterpiece.</span>ðŸ“–</h1>
      <p class="text-muted">No blogs found. Be the first to share your thoughts!</p>
    </div>
  <% } %>
</div>
<%- include("partials/footer.ejs") %>